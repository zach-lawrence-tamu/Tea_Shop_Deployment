<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/landing_page_style.css">
    <title>Login</title>

    <!-- Internal CSS Styling -->
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        
        .nav-links {
            width: 100%;
            background-color: #f5f5f5;
            padding: 15px 0;
            text-align: center;
            border-bottom: 1px solid #ccc;
        }

        .nav-links a {
            margin: 0 15px;
            text-decoration: none;
            color: #262c9c;
            font-weight: bold;
        }

        .nav-links a:hover {
            background-color: rgb(197, 197, 197);
        }

        .page-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .login-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            border: 2px solid black; /* Black border with a thickness of 2px */
        }

        input {
            width: 95%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .order-container{
            width: 100%;
            max-width: 600px;
        }

        .button-login {
            width: 100%;
            padding: 10px 0;
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

        .button-login:hover {
            background-color: #357c39;
        }

        .button-order {
            width: 100%;
            padding: 10px 0;
            background-color: #007bff;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .button-order:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <!-- Main page wrapper -->
    <div class="page-wrapper">

        <!-- Navigation Links -->
        <div class="nav-links">
            <a href="/">Home</a> |
            <a href="/cashier">Cashier</a> |
            <a href="/cashier/orders">Orders</a> |
            <a href="/cashier/transactions">Transactions</a>
        </div>

        <!-- Login form section -->
        <div class="login-container">
            <h2>Login</h2>

            <!-- Form for username and password -->
            <form id="loginForm">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>

                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>

            </form>

            <!-- Login button wrapped inside a link for redirecting -->
            <a href="/manager/reports">
                <button type="button" class="button-login">Login</button>
            </a>
        </div>

        <!-- Start order button section -->
        <div class="order-container">
            <a href="/customer">
                <button type="button" class="button-order">Start Order</button>
            </a>
        </div>
    </div>
</body>
</html>
