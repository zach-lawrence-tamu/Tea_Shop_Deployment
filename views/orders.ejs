<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Orders</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            text-align: center;
        }

        .nav-links {
            width: 100%;
            background-color: #f5f5f5;
            padding: 15px 0;
            text-align: center;
            border-bottom: 1px solid #ccc;
        }

        .nav-links a {
            margin: 0 15px;
            text-decoration: none;
            color: #262c9c;
            font-weight: bold;
        }

        .nav-links a:hover {
            background-color: rgb(197, 197, 197);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn-container {
            text-align: center;
        }

        .btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

    </style>
</head>
<body>
    <h1>Orders</h1>

    <div class="nav-links">
        <a href="/">Home</a> |
        <a href="/cashier">Cashier</a> |
        <a href="/cashier/orders">Orders</a> |
        <a href="/cashier/transactions">Transactions</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Order #</th>
                <th>Time</th>
                <th>Date</th>
                <th>Total Cost ($)</th>
            </tr>
        </thead>
        <tbody id="orders-body">
            <% for (let i = 0; i < order_data.length; i++) { %>
                <tr>
                    <td><%= order_data[i].id %></td>
                    <td><%= order_data[i].time %></td>
                    <td><%= order_data[i].date %></td>
                    <td><%= order_data[i].cost.toFixed(2) %></td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <div class="btn-container">
        <% if (hasMore) { %>
            <form method="GET" action="/cashier/orders">
                <input type="hidden" name="offset" value="<%= nextOffset %>">
                <button type="submit" class="btn">Load 20 More Orders</button>
            </form>
        <% } else { %>
            <p>No more orders to load.</p>
        <% } %>
    </div>
</body>
</html>
